{
  "version": 2,
  "builds": [
    {
      "src": [
        "api/index.js",
        "api/models/Favorite.js",
        "api/models/Search.js",
        "api/models/User.js",
        "api/middleware/auth.js",
        "api/routes/favorites.js",
        "api/routes/auth.js",
        "api/routes/weather.js"
      ],
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": [
        "/api/index.js",
        "/api/models/Favorite.js",
        "/api/models/Search.js",
        "/api/models/User.js",
        "/api/middleware/auth.js",
        "/api/routes/favorites.js",
        "/api/routes/auth.js",
        "/api/routes/weather.js"
      ]
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}
